<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="26sp"
            android:gravity="center"
            android:text="Pro Calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_margin="10dp"
            android:background="@drawable/display_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_margin="5dp"
                        android:background="@drawable/button_cancel"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_multiply"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_remove"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_margin="5dp"
                        android:background="@drawable/button_seven"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_eight"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_nine"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_margin="5dp"
                        android:background="@drawable/button_four"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_five"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_six"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_margin="5dp"
                        android:background="@drawable/button_one"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_two"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>
                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_three"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:layout_margin="5dp"
                        android:background="@drawable/button_zero"
                        android:layout_width="160dp"
                        android:layout_height="80dp"/>

                    <ImageButton

                        android:layout_margin="5dp"
                        android:background="@drawable/button_dot"
                        android:layout_width="80dp"
                        android:layout_height="80dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_margin="5dp"
                    android:background="@drawable/button_add"
                    android:layout_width="80dp"
                    android:layout_height="160dp"/>
                <ImageButton

                    android:layout_margin="5dp"
                    android:background="@drawable/button_devide"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
                <ImageButton

                    android:layout_margin="5dp"
                    android:background="@drawable/button_minus"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>

                <ImageButton
                    android:layout_margin="5dp"
                    android:background="@drawable/button_equal"
                    android:layout_width="80dp"
                    android:layout_height="80dp"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>