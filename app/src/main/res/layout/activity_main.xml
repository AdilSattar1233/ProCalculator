<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:fontFamily="serif"
            android:padding="20dp"
            android:textColor="#fff"
            android:textSize="26sp"
            android:gravity="center"
            android:text="Pro Calculator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:scrollbars="vertical"
            android:background="@drawable/display_screen"
            android:id="@+id/displayResult"
            android:textColor="#000"
            android:padding="10dp"
            android:textSize="26sp"
            android:gravity="bottom|end"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <LinearLayout
            android:padding="10dp"
            android:gravity="center_horizontal|center_vertical"
            android:background="@drawable/button_background"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:tag="c"
                        android:onClick="btnClick"
                        android:id="@+id/btnCancel"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_cancel"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:tag="*"
                        android:onClick="btnClick"
                        android:id="@+id/btnMultiply"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_multiply"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:tag="cross"
                        android:onClick="btnClick"
                        android:id="@+id/btnBackspace"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_remove"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:tag="7"
                        android:onClick="btnClick"
                        android:id="@+id/btnSeven"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_seven"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:tag="8"
                        android:id="@+id/btnEight"
                        android:onClick="btnClick"

                        android:layout_margin="5dp"
                        android:background="@drawable/button_eight"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:tag="9"
                        android:id="@+id/btnNine"
                        android:onClick="btnClick"

                        android:layout_margin="5dp"
                        android:background="@drawable/button_nine"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>

                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="4"
                        android:id="@+id/btnFour"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_four"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:id="@+id/btnFive"
                        android:onClick="btnClick"
                        android:tag="5"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_five"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="6"
                        android:id="@+id/btnSix"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_six"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="1"
                        android:id="@+id/btnOne"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_one"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="2"
                        android:id="@+id/btnTwo"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_two"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>
                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="3"
                        android:id="@+id/btnThree"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_three"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>

                </LinearLayout>


                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="0"
                        android:id="@+id/btnZero"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_zero"
                        android:layout_width="140dp"
                        android:layout_height="60dp"/>

                    <ImageButton
                        android:onClick="btnClick"
                        android:tag="."
                        android:id="@+id/btnDot"
                        android:layout_margin="5dp"
                        android:background="@drawable/button_dot"
                        android:layout_width="@dimen/button_size"
                        android:layout_height="@dimen/button_size"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:tag="+"
                    android:onClick="btnClick"
                    android:id="@+id/btnPlus"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_add"
                    android:layout_width="60dp"
                    android:layout_height="130dp"/>
                <ImageButton
                    android:onClick="btnClick"
                    android:tag="/"
                    android:id="@+id/btnDivide"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_devide"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"/>
                <ImageButton
                    android:onClick="btnClick"
                    android:tag="-"
                    android:id="@+id/btnMinus"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_minus"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"/>

                <ImageButton
                    android:onClick="btnClick"
                    android:tag="="
                    android:id="@+id/btnEqual"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_equal"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"/>
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>